
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" href="~/Content/images/LOGOTQ-removebg-preview.png" type="">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - Admin</title>
    <link href="/LinkAdmin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <h2>Đăng nhập</h2>
                                    <form action="~/admin/Login/kiemtradangnhap" method="post">
                                        <div class="form-group">
                                            <label>Tên đăng nhâp:</label>
                                            <input type="Text" value="@ViewBag.username" class="form-control" required name="username" />
                                        </div>
                                        <div class="form-group">
                                            <label>Mật khẩu:</label>
                                            <input type="password" value="@ViewBag.password" class="form-control" required name="password" />
                                        </div>

                                        <div class="form-group">
                                            <br />
                                            @*<input type="checkbox" name="ghinho" /> Ghi nhớ tài khoản <br />*@
                                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="/LinKKK/admin/https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/LinKKK/admin/js/scripts.js"></script>
</body>
</html>
