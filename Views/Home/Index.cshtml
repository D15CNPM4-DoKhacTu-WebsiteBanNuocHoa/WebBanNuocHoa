@model IEnumerable<WEB_NUOCHOA_TQ.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<div class="content">
    <div class="container">
        <h2>Tất cả sản phẩm</h2>
        <div class="content-top">
            <div class="grid-in">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 grid-top"  style="margin-bottom: 6%">
                        <a href="@Url.Action("XemChiTiet","SanPham", new { id = item.ID })" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@Url.Content(item.Anh)" width="150px" height="150px" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left b-delay03 ">
                                    <span>@item.Gia.Value.ToString("#,##") VNĐ</span>
                                </h3>
                            </div>
                        </a>
                        <p><a href="@Url.Action("XemChiTiet","SanPham", new { id = item.ID })">@item.Ten</a></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


