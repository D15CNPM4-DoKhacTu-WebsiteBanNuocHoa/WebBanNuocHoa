@using WEB_NUOCHOA_TQ.Models
@model List<ItemGioHang>
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

@if (Model == null || Model.Count == 0)
{
    <div class="content-top" style="height: 320px">
        <div class="container">
            <h1>Giỏ hàng rỗng</h1>
        </div>
    </div>

}
else
{
    <table class="table" style="width:100% ">
        <tr>
            <td>Mã SP</td>
            <td>Tên SP</td>
            <td>Hình ảnh</td>
            <td>Số lượng</td>
            <td>Đơn Giá</td>
            <td>Thành tiền</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDSanPham</td>
                <td>@item.TenSp</td>
                <td>
                    <img src="@Url.Content(item.HinhAnh)" width="150px" height="150x" />
                </td>
                <td>@item.SoLuong</td>
                <td>@item.Gia.ToString("#,##") VNĐ</td>
                <td>@item.ThanhTien.ToString("#,##") VNĐ</td>
                <td>
                    <button style="font-weight: bold">
                        @Html.ActionLink("Sửa", "SuaGioHang", new { @MaSp = item.IDSanPham })
                    </button>
                </td>
            <td>
                <button style="font-weight: bold">
                    @Html.ActionLink("Xóa", "XoaGioHang", new { @MaSp = item.IDSanPham })
                </button>
                
            </td>

        </tr>
    }
    </table>
    <div class="DatHang" style="margin-bottom: 50px">
        @using (Html.BeginForm("DatHang", "GioHang"))
        {
            <input type="submit" value="Đặt hàng" style="padding:7px 12px" />
        }

    </div>
}


