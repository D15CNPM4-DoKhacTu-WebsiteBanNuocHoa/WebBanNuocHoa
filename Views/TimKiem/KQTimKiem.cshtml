@using WEB_NUOCHOA_TQ.Models
@using PagedList.Mvc
@model PagedList.IPagedList<SanPham>
@{
    ViewBag.Title = "KQTimKiem";
    Layout = "~/Views/Layout/ListSanPhamLayout.cshtml";
}
<div class="content-top" style="width: 100%">
    <div class="container" style="width: 100%">
        <div class="col-md-9 product1" style="margin-left: 12%">
            <div class=" bottom-product">
                @foreach (var item in Model)
                {

                    <div class="col-md-4 bottom-cd simpleCart_shelfItem" style="margin-bottom: 80px">
                        <div class="product-at ">
                            <a href="@Url.Action("XemChiTiet", "SanPham", new {id=item.ID})">
                                <img class="img-responsive" src="@Url.Content(item.Anh)" width="100%" height="100%" alt="">
                                <div class="pro-grid">
                                    <span class="buy-in">Buy Now</span>
                                </div>
                            </a>
                        </div>
                        <p class="tun">@item.Ten</p>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new { @MaSp = item.ID, @strURL = Request.Url.ToString()})" class="item_add"><p class="number item_price"><i> </i>@item.Gia.Value.ToString("#,##") VNĐ</p></a>
                    </div>
                }

                <div class="clearfix"> </div>
            </div>

        </div>

    </div>
    <div class="dlink">
        @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount*@
        @Html.PagedListPager(Model, page => Url.Action("KQTimKiem", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
    </div>
</div>


